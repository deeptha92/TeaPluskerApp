<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    style="@style/SCREEN">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/signup_text_margin_top"
            android:orientation="vertical">

            <TextView
                android:id="@+id/trnId"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:text="@string/trn_id"
                style="@style/TEXT"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/name"
                style="@style/TEXT"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/trnDate"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                style="@style/TEXT"
                android:textSize="18sp"
                android:textStyle="bold" />


        </LinearLayout>

        <Button
            android:id="@+id/button_delete"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".001"
            android:backgroundTint="#FF0000"
            android:drawableStart="@drawable/delete_details"
            android:gravity="center_vertical|center_horizontal"/>

        <Button
            android:id="@+id/button_view"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".001"
            android:backgroundTint="#00FF00"
            android:drawableStart="@drawable/show_hide_icon"
            android:gravity="center_vertical|center_horizontal"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#ffd700"/>

</LinearLayout>